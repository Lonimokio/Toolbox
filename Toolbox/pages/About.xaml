<UserControl x:Class="Toolbox.pages.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Toolbox.pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Text="About Toolbox" />
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="22" TextWrapping="Wrap" TextAlignment="Justify" Margin="20">
            Toolbox is a versatile program that includes a variety of tools to assist you in your daily tasks. It includes math tools such as a calculator and conversion tools, network tools like a Ping test, and a Cheat Sheets page where you can view and edit markdown files. Toolbox utilizes NuGet packages such as Mages, Markdown, and LiveCharts.WPF to provide these functionalities.
        </TextBlock>
    </Grid>
</UserControl>
